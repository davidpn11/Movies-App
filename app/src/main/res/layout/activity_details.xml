<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.david.popularmovies.DetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/steelblue">
    </FrameLayout>

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/post_image"
        android:layout_toEndOf="@+id/post_image"
        android:layout_toRightOf="@+id/post_image"
        android:text="adasd"
        android:textSize="25sp"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_rate"
        android:layout_above="@id/movie_rating"
        android:layout_toEndOf="@+id/post_image"
        android:layout_toRightOf="@+id/post_image"
        android:textStyle="italic"
        android:textSize="10dp"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:textColor="@color/lightgrey"
        />


    <TextView
        android:id="@+id/movie_sinopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_image"
        android:padding="10sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_release"
        android:layout_below="@id/movie_rating"
        android:layout_toEndOf="@+id/post_image"
        android:layout_toRightOf="@+id/post_image"
        android:textStyle="italic"
        android:textSize="10dp"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:textColor="@color/lightgrey"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adasdasd"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/movie_rating"
        android:layout_alignLeft="@+id/movie_rating"
        android:layout_alignStart="@+id/movie_rating" />

</RelativeLayout>
